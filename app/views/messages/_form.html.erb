<%= form_for(@message) do |f| %>
<form role="form">
  <div class="form-group">
      <label for="message_name">名前:</label>
      <%= f.text_field :name , class: "form-control" %>
   </div>

  <div class="form-group">
      <label for="message_name">内容:</label>
      <%= f.text_area :body, class: "form-control", :size => "20x3" %>
  </div>
  
  <div class="form-group">
      <label for="message_name">年齢:</label>
      <%= f.text_area :age, class: "form-control", :size => "20x1" %>
  </div> 
  <%= f.submit class: "btn btn-sm btn-primary" %>
</form>
<% end %>